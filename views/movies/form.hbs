<h1>Add a New Movie</h1>

{{#if errors}}
<ul class="errors">
    {{#each errors }}
    <li>{{ this }}</li>
    {{/each }}
</ul>
{{/if}}

<form action="/movies" method="POST" class="new-movie-form">
    <label for="title"> Title:
        <input type="text" id="title" name="title" value="{{ movie.title }}">
    </label>
    </br>
    <label for="releaseYear"> Release Year:
        <input type="text" id="releaseYear" name="releaseYear" value="{{movie.releaseYear}}">
    </label>

    </br>
    <label for="runtime"> Runtime:
        <input type="text" id="runtime" name="runtime" value="{{movie.runtime}}">
    </label>
    </br>

    <input type="submit" class="button" value="Save!"/>
</form>