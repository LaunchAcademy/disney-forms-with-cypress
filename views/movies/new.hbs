<h1>Add a New Movie</h1>

{{#if errors }}
  <ul class="errors">
    {{#each errors as |errorObject errorKey| }}
      {{#each errorObject }}
        {{#if this }}
          <li>{{ errorKey }} {{ this }}</li>
        {{/if }}
      {{/each }}
    {{/each }}
  </ul>
{{/if }}

<form class="new-movie-form" action="/movies" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{ movie.title }}">
  
  <label for="releaseYear">Release Year:</label>
  <input type="text" id="releaseYear" name="releaseYear" value="{{ movie.releaseYear }}">
  
  <label for="runtime">Runtime:</label>
  <input type="text" id="runtime" name="runtime" value="{{ movie.runtime }}">

  <input class="button" type="submit" value="Save!">
</form>